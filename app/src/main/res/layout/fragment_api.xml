<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingLeft="8dp"
        android:paddingTop="8dp"
        android:paddingRight="8dp"
        android:paddingBottom="8dp">

        <ScrollView
            android:id="@+id/apis_scroll_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <Button
                    android:id="@+id/initBilling_btn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="결제초기화" />

                <Button
                    android:id="@+id/inapp_purchase_btn_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/inapp_purchase_1" />

                <Button
                    android:id="@+id/inapp_purchase_btn_2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/inapp_purchase_2" />

                <Button
                    android:id="@+id/inapp_purchase_btn_3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/inapp_purchase_3" />

            </LinearLayout>

        </ScrollView>
        <Button
            android:id="@+id/clear_log_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:text="clear" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.9">

            <TextView
                android:id="@+id/log"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textIsSelectable="true" />
        </ScrollView>
    </LinearLayout>
</ScrollView>